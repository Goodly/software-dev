{
	"manifest_version": 2,
	"name": "Query Mini-Extension",
	"description": "This extension checks if Public Editor has the current page among it's scored articles.",
	"version": "1.0",

	"permissions": [
		"tabs",
		"activeTab",
		"http://*/",
		"https://*/"
	],

	"content_scripts": [
		{
		  "matches": ["<all_urls>"],
		  "js": ["content.js"]
		}
	],

	"background": {
		"scripts": ["background.js"],
		"persistent": false	
	},

	"browser_action": {
	"default_popup": "popup.html",
	"default_icon": {
		"16": "pe16.png",
		"32": "pe32.png",
		"48": "pe48.png",
		"128": "pe128.png"
		}
	},

	"icons": {
		"16": "pe16.png",
		"32": "pe32.png",
		"48": "pe48.png",
		"128": "pe128.png"
	}
}
