{
	"manifest_version": 2,
	"name": "Query Mini-Extension",
	"description": "This extension checks if Public Editor has the current page among it's scored articles.",
	"version": "1.0",

	"permissions": [
		"tabs",
		"http://*/",
		"https://*/"
	],

	"background": {
		"page": "background.html"
	},
	
	"content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
	],

	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/pe16.png",
			"32": "images/pe32.png",
			"48": "images/pe48.png",
			"128": "images/pe128.png"
		}
	},

	"icons": {
		"16": "images/pe16.png",
		"32": "images/pe32.png",
		"48": "images/pe48.png",
		"128": "images/pe128.png"
	}
}
